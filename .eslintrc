{
  "extends": "standard",
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jest": true
  },
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "semi": [
      "error",
      "always"
    ],
    "space-before-function-paren": 0,
    "no-throw-literal": 0,
    "prefer-promise-reject-errors": 0
  }
}
